.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/home')
        span.ion-cube
        | TIME LOGGER
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          if user.role === 'admin'
              li(class=title=='Home'?'active':undefined)
                a(href='/home') Home
              li(class=title=='Users'?'active':undefined)
                a(href='/users') Users
              li(class=title=='Clients'?'active':undefined)
                a(href='/clients') Clients
              li(class=title=='Projects'?'active':undefined)
                a(href='/projects') Projects
              li(class=title=='LogTime'?'active':undefined)
                a(href='/logtime') LogTime
          else
              li(class=title=='LogTime'?'active':undefined)
                a(href='/logtime') LogTime


      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout
