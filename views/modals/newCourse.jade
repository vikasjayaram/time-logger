#createNewCourse.modal.fade
    .modal-dialog
        .modal-content
            form#modal-form.form-horizontal(method = "post", action = "/new_course")
                .modal-header
                    a.close(data-dismiss='modal') Ã—
                    h4.modal-title New Course
                .modal-body
                    .form-group
                        input(type='hidden', name='_csrf', value=_csrf)
                        label.control-label.col-md-4(for='courseCode') Course Code
                        .col-md-8
                            input.form-control(type='text', name='courseCode', placeholder='OAPPSYS-123')
                    .form-group
                        label.control-label.col-md-4(for='courseName') Course Name
                        .col-md-8
                            input.form-control(type='text',name='courseName',placeholder='Diploma in Awesomeness')
                    .form-group
                        label.control-label.col-md-4(for='cricosCode') Cricos Code
                        .col-md-8
                            input.form-control(type='text',name='cricosCode',placeholder='CRICOS1234')
                            span.help-inline
                    .form-group
                        label.control-label.col-md-4(for='duration') Duration(Weeks)
                        .col-md-8
                            input.form-control(type='number',name='duration', placeholder='12')
                    .form-group
                        label.control-label.col-md-4(for='studyWeeks') Study Weeks
                        .col-md-8
                            input.form-control(type='number',name='studyWeeks', placeholder='12')
                    .form-group
                      label.control-label.col-md-4(for='holidayWeeks') Holiday Weeks
                      .col-sm-8
                        input.form-control(type='number', name='holidayWeeks', placeholder='6')
                    .form-group
                      label.control-label.col-md-4(for='tutionFee') Tution Fee($)
                      .col-sm-8
                        input.form-control(type='number', name='tutionFee', placeholder='1500')
                    .form-group
                      label.control-label.col-md-4(for='materialFee') Material Fee($)
                      .col-sm-8
                        input.form-control(type='number', name='materialFee', placeholder='300')
                    .form-group
                        label.control-label.col-md-4(for='studyPeriod') Study Period
                        .col-md-8
                            textarea.form-control(name='studyPeriod')

                .modal-footer
                    button#modal-course-btn(type='submit', class="btn btn-success") Create
                    a.btn.btn-danger(href='#', data-dismiss='modal') Cancel

